<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.enthsn" name="Enthsn Add-on Repository"
    version="1.0.0"
    provider-name="Enthsn">
	<extension point="xbmc.addon.repository" name="Enthsn Add-on Repository">
		<info compressed="false">https://github.com/enthsn/enthsn/raw/master/zips/addons.xml</info>
		<checksum>https://github.com/enthsn/enthsn/raw/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/enthsn/enthsn/raw/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons for Kodi from Enthsn Add-on Repository</summary>
		<description>Video plug-ins for Kodi by Enthsn!</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.video.enthsn"
       name="Einthusan"
       version="1.0.0"
       provider-name="Enthsn">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.requests" version="2.7.0" />
        <import addon="script.module.html2text" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Watch movies from Einthusan.com</summary>
        <description lang="en">
        This XBMC plugin allows to watch movies from Einthusan.com. Please support them.
        Credits to Humla for creating the addon.
        </description>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
